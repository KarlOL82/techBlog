<div
  class="container bg-violet-400 text-white flex-row mx-auto px-4 py-5 rounded-md justify-content-center"
>
  <h1
    class="text-6xl font-extrabold text-pink-400 font-extrabold text-center"
  >Welcome, {{username}}</h1>
</div>
{{#each posts as |post|}}
  <div
    class="container w-4/5 mx-auto d-flex justify-center rounded-md bg-cyan-400 my-5"
  >
    <div class="card mx-4 mb-4 bg-dark justify-center" style="width: auto;">
      <div class="py-3 bg-dark"></div>
      <div class="card-body bg-light">
        <div class="small text-muted d-flex justify-content-between">
          <div>

            <span class="text-xs">{{post.createdAt}}</span>
          </div>
          <div class="d-flex align-items-center">
            <span class="text-xl font-bold text-violet-700">By:
              {{post.user.username}}</span>
          </div>
        </div>
        <h2 class="card-title text-2xl text-zinc-900 font-bold">{{title}}</h2>
        <hr class="my-1" />
        <p class="card-text text-lg">{{postText}}</p>
        <hr class="my-1" />
        
        {{#each post.comments as |comment|}}
          <h3 class="showComment border-solid border-pink-400  text-lg">
          Comment by: <span class="text-violet-700">{{post.user.username}}</span>
          </h3>
          <h2 class="mx-1 my-2 py-1">
            {{comment.commentText}}
          </h2>
          <button class="deleteComment px-4 py-3 bg-violet-400 hover:bg-pink-400 font-semibold leading-6 rounded-md">Delete Post"></button>

        {{/each}}
      </div>
    </div>
  </div>
{{/each}}

<form class="form-example rounded-md bg-cyan-400 w-4/5 mx-auto" id="post-element">
  <div class="form-example text-xl px-3 py-3">
    <label for="name">Create New Post:</label><br />
    <input
      class="text-center bg-cyan-100 border-cyan-900 border-4 rounded-md w-1/3 h-12"
      placeholder="Title of Post"
      type="text"
      name="name"
      id="post-form"
      required
    />
  </div>
  <div class="form-example text-xl px-4 py-4">
    <label for="post-body">Type your post here: </label><br />
    <textarea
      class="bg-cyan-100 border-cyan-900 border-4 mx-3 my-3 h-64 w-4/6 rounded-md indent-6"
      placeholder="Type your post..."
      type="text"
      name="post-body"
      id="postContent"
    ></textarea>
  </div>
  <div class="form-example">
    <input
      class="bg-pink-400 py-5 px-5 mx-2 my-2 rounded-xl w-40"
      id="postButton"
      type="submit"
      value="POST"
    />
  </div>
</form>

<script src="/js/makePost.js"></script>