<h1>Welcome, {{username}}</h1>
{{#each posts as |post|}}
    <div class="container d-flex justify-content-center my-5">
      <div class="card mb-4 bg-dark" style="width: 80%;">
        <div class="py-3 bg-dark"></div>
        <div class="card-body bg-light">
          <div class="small text-muted d-flex justify-content-between">
            <div>
              <span>{{post.createdAt}}</span>
            </div>
            <div class="d-flex align-items-center">
              <span>By: {{post.user.username}}</span>
            </div>
          </div>
          <h2 class="card-title">{{title}}</h2>
          <hr class="my-1" />
          <p class="card-text">{{postText}}</p>
          <hr class="my-1" />
           {{#each post.comments as |comment|}}
           <h2>
            {{comment.commentText}}
           </h2>
           {{/each}}
        </div>
      </div>
    </div>
  {{/each}}

  <form class="form-example" id="post-element">
  <div class="form-example">
    <label for="name">Title of Post: </label>
    <input type="text" name="name" id="post-form" required>
  </div>
  <div class="form-example">
    <label for="post-body">Type your post here: </label>
    <textarea type="text" name="post-body" id="postContent" required></textarea>
  </div>
  <div class="form-example">
    <input type="submit" value="POST">
  </div>
</form>

<script src="/js/makePost.js"></script>