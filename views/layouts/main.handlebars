<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Console Blog</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body class ="bg-cyan-900">
    <header class="bg-cyan-400 text-white flex min-h-fit">
      {{#if logged_in}}
      <h1 class="text-xl px-4 py-3">
        Welcome, {{username}}
      </h1>
      {{else}}
      <h1>
        <a href="/" class="px-4 py-3 text-xl block hover:bg-cyan-400">
          <span class="text-lg"></span>
          Console Blog
        </a>
      </h1>
      {{/if}}
      <nav class="ml-auto flex leading-10">
      {{#if logged_in}}
          
          <a href="/" class="px-4 py-3 text-xl block hover:bg-cyan-700">Home</a>
          
          <a href="/profile"class="px-4 py-3 text-xl block hover:bg-cyan-700">Dashboard <span class="text-lg"></span></a>
          
          <button class="px-4 py-3 text-xl hover:bg-cyan-700"id="logout">logout</button>
        {{else}}
          <a href="/login" class="px-4 py-3 text-xl block hover:bg-cyan-700">Login</a>
        {{/if}}
      </nav>

    </header>
    <main class="container mx-auto bg-cyan-900 my-8 px-5">
      {{{body}}}
    </main>
    <footer>

    </footer>

   
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/makeComment.js"></script>
    
  </body>

</html>