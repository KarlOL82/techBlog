<main class="container justify-content-center">

  <div class="container bg-cyan-400 text-white flex-row mx-auto px-4 justify-content-center">
  <h1 class="text-6xl font-extrabold">Console Blog</h1>
  <h3 class ="text-3xl">Where Developers develop their development skills</h3>
  <h3 class ="text-3xl">by helping developing Developers develop</h3>
</div>

  {{#each posts as |post|}}
    <div class="container d-flex justify-content-center my-5">
      <div class="card mb-4 bg-dark" style="width: 80%;">
        <div class="py-3 bg-dark"></div>
        <div class="card-body bg-light">
          <div class="small text-muted d-flex justify-content-between">
            <div>
              <span>{{post.createdAt}}</span>
            </div>
            <div class="d-flex align-items-center">
              <span>By: {{post.user.username}}</span>
            </div>
          </div>
          <h2 class="card-title">{{title}}</h2>
          <hr class="my-1" />
          <p class="card-text">{{postText}}</p>
          <hr class="my-1" />
           {{#each post.comments as |comment|}}
           <h2>
            {{comment.commentText}}
           </h2>
           {{/each}}
        </div>
      </div>
    </div>
  {{/each}}

</main>