<main class="container justify-content-center">

  <div
    class="container rounded-md bg-violet-400 text-white flex-row mx-auto py-5 px-5 justify-content-center"
  >
    <h1 class="text-6xl text-pink-400  font-extrabold">Console Blog</h1>
    <h3 class="text-4xl">Where Developers develop their development skills</h3>
    <h3 class="text-4xl">by helping developing Developers develop</h3>
  </div>

  {{#each posts as |post|}}
    <div
      class="container mx-auto d-flex w-4/5 justify-center border-1 border-violet-400 rounded-md bg-cyan-400 px-5 my-5"
    >
      <divclass="card mb-4 bg-dark justify-center">
        <div class="py-3 bg-dark"></div>
        <div class="card-body justify-center max-w-md bg-dark">
          <div class="small text-muted d-flex justify-between">
            <div>
              <span class="text-xs">{{post.createdAt}}</span>
            </div>
            <div class="d-flex align-items-center">
              <span class="text-xl font-bold">By: {{post.user.username}}</span>
            </div>
          </div>
          <h2 class="card-title text-2xl font-bold">{{title}}</h2>
          <hr class="my-2" />
          <p class="card-text text-lg">{{postText}}</p>
          <hr class="my-2" />
          {{#each post.comments as |comment|}}
            <h2 class="text-lg">
              {{comment.commentText}}
            </h2>
            
            
          {{/each}}

          {{#if ../logged_in}}
    
                <button class="px-4 py-3 hover:bg-cyan-700" id="comment">Comment</button>
              
              {{else}}

              <a href="/login" class="px-4 py-3 block hover:bg-cyan-700">Login to post or comment</a>
              
            {{/if}}
          <div>
            
            
          </div>
        </div>
      </div>
    </div>
  {{/each}}



  <script src="/js/makeComment.js"></script>
</main>
